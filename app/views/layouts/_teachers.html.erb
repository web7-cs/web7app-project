            </div>
            <div class="col-md-3 mt-1 mb-1">
              <%= image_tag("2.jpg", :class=>'img-thumbnail') %>
            </div>
            <div class="col-md-3 mt-1 mb-1">
              <%= image_tag("1.jpg", :class=>'img-thumbnail') %>
            </div>
            <div class="col-md-3 mt-1 mb-1">
              <%= image_tag("1.jpg", :class=>'img-thumbnail') %>
            </div>
            <div class="col-md-3 mt-1 mb-1">
